    "item": [
        {
            "name": "Registration",
            "item": [
                {
                    "name": "Register Elderly User",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"fullName\": \"John Doe\",\n    \"age\": 65,\n    \"phone\": \"+1234567890\",\n    \"email\": \"elderly@example.com\",\n    \"homeAddress\": \"123 Silver Street, Health City\",\n    \"gender\": \"male\",\n    \"emergencyContactName\": \"Jane Doe\",\n    \"emergencyContactRelationship\": \"Daughter\",\n    \"emergencyContactPhone\": \"+1987654321\",\n    \"healthConditions\": [\"Hypertension\"],\n    \"currentMedications\": [\"Lisinopril\"],\n    \"specialNeeds\": \"Uses a cane\"\n}",
