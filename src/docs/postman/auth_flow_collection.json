                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/auth/register-elderly",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "auth",
                                "register-elderly"
                            ]
                        },
                        "description": "Registers a new elderly user. On success, an OTP is sent to the provided email."
