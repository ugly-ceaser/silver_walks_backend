# ============================================
# JWT AUTHENTICATION
# ============================================
# JWT secret key for access tokens (CHANGE THIS IN PRODUCTION!)
# Generate with: openssl rand -base64 32
JWT_SECRET=silverWalksToken

# JWT access token expiration time (e.g., 24h, 7d, 30m)
JWT_EXPIRES_IN=24h

# JWT refresh token secret (CHANGE THIS IN PRODUCTION!)
# Generate with: openssl rand -base64 32
JWT_REFRESH_SECRET=silverWalksRefreshToken

# JWT refresh token expiration time
JWT_REFRESH_EXPIRES_IN=7d

# ============================================
# PASSWORD HASHING
# ============================================
# Bcrypt salt rounds (recommended: 10-12)
BCRYPT_SALT_ROUNDS=10

# ============================================
# ENCRYPTION
# ============================================
# Encryption key for sensitive data (32 bytes hex string)
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY=

# ============================================
# CORS CONFIGURATION
# ============================================
# Allowed origins (comma-separated for multiple origins, or * for all)
# Example: http://localhost:3000,https://app.silverwalks.com
CORS_ORIGIN=http://localhost:8080

# Allow credentials (cookies, authorization headers)
CORS_CREDENTIALS=true

# ============================================
# RATE LIMITING
# ============================================
# Rate limit window in milliseconds (default: 900000 = 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# PAGINATION
# ============================================
# Default number of items per page
PAGINATION_DEFAULT_LIMIT=20

# Maximum number of items per page
PAGINATION_MAX_LIMIT=100

# ============================================
# FILE UPLOAD
# ============================================
# Maximum file size in bytes (default: 5242880 = 5MB)
UPLOAD_MAX_FILE_SIZE=5242880

# Allowed MIME types (comma-separated)
# Default: image/jpeg,image/png,image/jpg,application/pdf
UPLOAD_ALLOWED_MIME_TYPES=image/jpeg,image/png,image/jpg,application/pdf

